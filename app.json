{
  "expo": {
    "name": "Medidor Ótica",
    "slug": "meu-app-otica-expo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logoappotica.jpg",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logoappotica.jpg",
      "resizeMode": "contain",
      "backgroundColor": "#df181f"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Este app precisa acessar a câmera para capturar fotos para medição de óculos.",
        "NSPhotoLibraryUsageDescription": "Este app precisa acessar a galeria para selecionar fotos para medição."
      }
    },
    "android": {
      "package": "com.fmjoias.meuappoticaexpo",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/logoappotica.jpg",
        "backgroundColor": "#df181f"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Este app precisa acessar sua galeria para selecionar fotos para medição de óculos.",
          "cameraPermission": "Este app precisa acessar sua câmera para capturar fotos para medição de óculos."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "f20af4ee-cdc2-4921-8439-45f232bcd3ab"
      }
    }
  }
}
